    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
try{
            String id = BID.getText();
        Class.forName("com.mysql.cj.jdbc.Driver");
            Connection cn=DriverManager.getConnection("jdbc:mysql://localhost:3306/Library_managment","root","Pri#yal%1*8nam_04$");
            
            PreparedStatement ps=cn.prepareStatement("select * from book where id=?");
            ps.setString(1, id);
            ResultSet rs=ps.executeQuery();
            if(rs.next())
            {
            
            String name=rs.getString(2);
//            String issue=rs.getString(4);
//            String due=rs.getString(5);
//            
           
            B2.setText(name);
//            B3.setText(issue);
//            B4.setText(due);
            
            }
            cn.close();
        }
        catch(Exception e){
            System.out.println(e.getMessage());
            
            
        }
    
    }                                        

