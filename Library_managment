    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{


String id=TF1.getText();
String name=TF2.getText();
String course=TF3.getText();
String branch=TF4.getText();
String sem=TF5.getText();

Class.forName("com.mysql.cj.jdbc.Driver");
Connection cn=DriverManager.getConnection("jdbc:mysql://localhost:3306/Library_managment","root","Pri#yal%1*8nam_04$");

PreparedStatement ps=cn.prepareStatement("insert into register(id,name,course,branch,sem)values(?,?,?,?,?)");
ps.setString(1, id);
ps.setString(2, name);
ps.setString(3, course);
ps.setString(4, branch);
ps.setString(5, sem);

boolean b=ps.execute();
if(b==false){
JOptionPane.showMessageDialog(rootPane, "Successfully Registered");
}
cn.close();
}
catch(Exception e){
System.out.println(e.getMessage());


}
    }                                        

